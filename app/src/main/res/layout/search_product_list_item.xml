<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_productImageInSearchPage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:contentDescription="@string/product_description"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_productNameInSearchPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textSize="@dimen/large_text_size"
            app:layout_constraintBottom_toTopOf="@id/tv_productQuantityInSearchPage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_productImageInSearchPage"
            tools:text="MASK" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:contentPadding="4dp"
            tools:backgroundTint="@color/rating_green"
            app:layout_constraintTop_toTopOf="@id/tv_productNameInSearchPage"
            app:layout_constraintBottom_toBottomOf="@id/tv_productNameInSearchPage"
            android:id="@+id/cv_rating">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_productRatingInSearchPage"
                tools:text="5.0"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/white"
                android:drawableEnd="@drawable/ic_baseline_star_24"/>

        </com.google.android.material.card.MaterialCardView>



        <TextView
            android:id="@+id/tv_productQuantityInSearchPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:alpha="0.75"
            android:gravity="center"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintEnd_toStartOf="@id/tv_productIngredientInSearchPage"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_productNameInSearchPage"
            tools:text="(pack of 10)" />

        <TextView
            android:id="@+id/tv_productIngredientInSearchPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:alpha="0.75"
            android:gravity="center"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintBottom_toBottomOf="@id/tv_productQuantityInSearchPage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_productQuantityInSearchPage"
            app:layout_constraintTop_toTopOf="@id/tv_productQuantityInSearchPage"
            tools:text="Cotton" />

        <TextView
            android:id="@+id/tv_productPriceInSearchPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/price"
            android:textSize="@dimen/large_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_productIngredientInSearchPage" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            app:cardCornerRadius="20dp"
            app:contentPadding="4dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_productImageInSearchPage"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_deliveryTimeInSearchPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/small_text_size"
                tools:text="@string/time_and_distance" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_storeNameInSearchPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_productPriceInSearchPage"
            tools:text="ABC Pharmacy" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>