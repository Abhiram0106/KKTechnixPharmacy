<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KKTechnixPharmacy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.KKTechnixPharmacyTESTING" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/kktechnix</item>
        <item name="colorPrimaryVariant">@color/kktechnix_alpha75</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/kktechnix</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/kktechnix</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="buttonTint">@color/white</item>
        <item name="android:textAppearanceButton">@color/white</item>

        <item name="searchViewStyle">@style/MySearchViewStyle</item>


    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="layout">@layout/abc_search_view</item>
        <item name="android:backgroundTint">@color/kktechnix_alpha75</item>
        <item name="queryBackground">@color/kktechnix_alpha75</item>
        <item name="submitBackground">@color/kktechnix_alpha75</item>
        <item name="closeIcon">@drawable/ic_baseline_close_24_dark</item>
        <item name="searchIcon">@drawable/ic_baseline_search_24_dark</item>
        <item name="searchHintIcon">@drawable/ic_baseline_search_24_dark</item>
        <item name="goIcon">@drawable/ic_baseline_arrow_forward_ios_24_dark</item>
        <item name="voiceIcon">@drawable/ic_baseline_mic_24_dark</item>
        <item name="commitIcon">@drawable/abc_ic_commit_search_api_mtrl_alpha</item>
        <item name="suggestionRowLayout">@layout/abc_search_dropdown_item_icons_2line</item>
    </style>

</resources>